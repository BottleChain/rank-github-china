<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="@dimen/padding">
    <ImageView
        android:id="@+id/avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"/>
    <TextView
        android:id="@+id/full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:drawableLeft="@drawable/ic_user"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/ic_user"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintTop_toTopOf="@id/avatar"/>
    <TextView
        android:id="@+id/username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="start"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#999"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/full_name"
        app:layout_constraintEnd_toStartOf="@+id/rank"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/full_name"/>
    <TextView
        android:id="@+id/rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_rank"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/ic_rank"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/full_name"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:drawableLeft="@drawable/ic_location"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/ic_location"
        android:ellipsize="end"
        android:gravity="center_vertical|start"
        android:maxLines="1"
        android:textColor="#666"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/language"
        app:layout_constraintEnd_toStartOf="@+id/followers"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/full_name"
        app:layout_constraintTop_toBottomOf="@id/full_name"/>
    <TextView
        android:id="@+id/followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/location"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/ic_follower"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/ic_follower"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@id/location"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:drawableLeft="@drawable/ic_code"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/ic_code"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/avatar"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/repos"
        app:layout_constraintStart_toStartOf="@id/full_name"/>
    <TextView
        android:id="@+id/repos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_repo"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/ic_repo"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/language"
        app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>